@model CompanyPostDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Create Company</h1>
                <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Company Name">
                        <span class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description">Description</label>
                        <input type="text" class="form-control" asp-for="@Model.Description" placeholder="Description">
                        <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>


                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description">Linkedin URL</label>
                        <input type="text" class="form-control" asp-for="@Model.LinkedinUrl" placeholder="Linkedin URL">
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.TwitterUrl">Twitter URL</label>
                        <input type="text" class="form-control" asp-for="@Model.TwitterUrl" placeholder="Twitter URL">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.InstagramUrl">Instagram URL</label>
                        <input type="text" class="form-control" asp-for="@Model.InstagramUrl" placeholder="Instagram URLL">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.FacebookUrl">Facebook URL</label>
                        <input type="text" class="form-control" asp-for="@Model.FacebookUrl" placeholder="Facebook URL">

                    </div>


                    <div class="form-group">
                        <div class="input-group col-xs-12">
                            <input type="file" class="form-control file-upload-info" asp-for="@Model.formFile" accept="image/*"  placeholder="Upload Image">
  <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                           
                        </div>
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>