@model RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 py-lg-5 my-4">
    <div class="row justify-content-center">
        <div class="col-md-6 pt-4 mt-3 mt-md-0">
            <div class="card p-4 border-0 shadow">
                <h2 class="h4 mb-3">No account? Sign up</h2>
                <p class="fs-sm text-muted mb-4">Registration takes less than a minute but gives you full control over your orders.</p>
                <form class="needs-validation" method="post" action="Register" >
                <div asp-validation-summary="ModelOnly"></div>
                    <div class="row gx-4 gy-3">
                        <div class="col-sm-6">
                            <label asp-for="@Model.UserName" class="form-label" for="reg-fn">User Name</label>
                            <input asp-for="@Model.UserName" class="form-control" type="text" required id="reg-fn">
                            <span asp-validation-for="@Model.UserName" class=" text-danger "></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.Email" class="form-label" for="reg-email">E-mail Address</label>
                            <input asp-for="@Model.Email" class="form-control" type="email" required id="reg-email">
                            <span asp-validation-for="@Model.Email" class=" text-danger "></span>

                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.PhoneNumber" class="form-label" for="reg-phone">Phone Number</label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" type="text" required id="reg-phone">
                            <span asp-validation-for="@Model.PhoneNumber" class=" text-danger "></span>

                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.Password" class="form-label" for="reg-password">Password</label>
                            <input asp-for="@Model.Password" class="form-control" type="password" required id="reg-password">
                            <span asp-validation-for="@Model.Password" class=" text-danger "></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.ConfirmPassword" class="form-label" for="reg-password-confirm">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" required id="reg-password-confirm">
                            <span asp-validation-for="@Model.ConfirmPassword" class=" text-danger "></span>

                        </div>
                        <div class="col-12 text-end">
                            <button class="btn btn-primary" type="submit"><i class="ci-user me-2 ms-n1"></i>Sign Up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>