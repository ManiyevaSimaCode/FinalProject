@model CategoryUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Update Category</h1>
                  @*<div class="text text-danger" asp-validation-summary="ModelOnly"></div>*@

                <form class="forms-sample" method="post" action="Update"  enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.categoryGetDto.Id"/>
                        <label  asp-for="@Model.categoryPostDto.Name">Name</label>
                        <input  type="text" class="form-control"  asp-for="@Model.categoryPostDto.Name" value="@Model.categoryGetDto.Name">
                         <span class="mt-2 text text-danger" asp-validation-for="@Model.categoryPostDto.Name"></span>
                
                        
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>